{
  "name": "clr-addons",
  "version": "6.2.1",
  "private": true,
  "scripts": {
    "build:ui:css": "sass --source-map --precision=8 ./src/clr-addons/themes/clr-ui/clr-ui.scss ./dist/clr-addons/styles/clr-ui.css && sass --source-map --precision=8 ./src/clr-addons/themes/clr-ui-dark/clr-ui-dark.scss ./dist/clr-addons/styles/clr-ui-dark.css && sass --source-map --precision=8 ./src/clr-addons/themes/phs/phs-theme.scss ./dist/clr-addons/styles/clr-addons-phs.css",
    "build:ui:prefix": "postcss ./dist/clr-addons/styles/clr-ui.css -o ./dist/clr-addons/styles/clr-ui.css && postcss ./dist/clr-addons/styles/clr-ui-dark.css -o ./dist/clr-addons/styles/clr-ui-dark.css && postcss ./dist/clr-addons/styles/clr-addons-phs.css -o ./dist/clr-addons/styles/clr-addons-phs.css",
    "build:ui:src": "cpy --parents --cwd=src/clr-addons **/*.scss ../../dist/clr-addons/src/",
    "build:ui:fonts": "cpy --parents --cwd=src/clr-addons/themes fonts/**/*.* ../../../dist/clr-addons/",
    "build:ui:optimize": "csso -i ./dist/clr-addons/styles/clr-ui.css -o ./dist/clr-addons/styles/clr-ui.min.css -s file && csso -i ./dist/clr-addons/styles/clr-ui-dark.css -o ./dist/clr-addons/styles/clr-ui-dark.min.css -s file && csso -i ./dist/clr-addons/styles/clr-addons-phs.css -o ./dist/clr-addons/styles/clr-addons-phs.min.css -s file",
    "build:ui": "npm-run-all build:ui:css build:ui:prefix build:ui:src build:ui:optimize build:ui:fonts",
    "build:angular:package": "cpy ./npm/clr-addons/package.json ./npm/clr-addons/README.md ./src/clr-addons/ && cross-var replace @VERSION $npm_package_version ./src/clr-addons/package.json",
    "build:angular:ngpackagr": "ng build clr-addons",
    "build:angular": "npm-run-all build:angular:package build:angular:ngpackagr",
    "build": "npm-run-all clean build:ui build:angular",
    "ng": "ng",
    "start": "npm-run-all build:ui:css build:ui:prefix serve:dev",
    "start:dev": "npm-run-all build:ui:css build:ui:prefix serve:dev:port",
    "serve:dev": "ng serve dev",
    "serve:dev:port": "ng serve dev --port 4300 --host=0.0.0.0",
    "clean": "shx rm -rf dist",
    "test:format": "prettier --check './**/*.{js,json,md,ts,scss}'",
    "test:lint:ts": "tslint -p . -c tslint.json \"src/**/*.ts\"",
    "test:lint:styles": "stylelint \"src/**/*.scss\" \"src/**/*.css\"",
    "test:lint": "npm-run-all test:lint:ts test:lint:styles",
    "test": "ng test clr-addons --watch false",
    "test:watch": "ng test clr-addons --watch",
    "test:travis": "npm-run-all test:format test:lint test build",
    "format:fix": "pretty-quick --staged",
    "lint:fix": "tslint -p . -c tslint.json --fix \"src/**/*.ts\" -e \"**/node_modules/**\"",
    "lint:styles:fix": "stylelint --fix \"src/**/*.scss\" \"src/**/*.css\"",
    "publish": "npm publish dist/clr-addons --access public"
  },
  "dependencies": {
    "@angular/animations": "8.1.2",
    "@angular/common": "8.1.2",
    "@angular/compiler": "8.1.2",
    "@angular/core": "8.1.2",
    "@angular/forms": "8.1.2",
    "@angular/platform-browser": "8.1.2",
    "@angular/platform-browser-dynamic": "8.1.2",
    "@angular/router": "8.1.2",
    "@clr/angular": "2.1.1",
    "@clr/icons": "2.1.1",
    "@clr/ui": "2.1.1",
    "@webcomponents/custom-elements": "1.2.4",
    "core-js": "2.5.5",
    "prismjs": "1.14.0",
    "rxjs": "6.5.2",
    "web-animations-js": "2.3.1",
    "zone.js": "0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.800.0",
    "@angular-devkit/build-ng-packagr": "0.800.0",
    "@angular-devkit/core": "8.0.0",
    "@angular/cli": "8.0.0",
    "@angular/compiler-cli": "8.1.2",
    "@types/jasmine": "3.3.13",
    "@types/jasmine-expect": "3.8.1",
    "@types/jasmine-matchers": "0.2.32",
    "@types/jasminewd2": "2.0.6",
    "@types/node": "8.9.5",
    "autoprefixer": "9.5.1",
    "cpy-cli": "2.0.0",
    "cross-var": "1.1.0",
    "csso-cli": "2.0.2",
    "del-cli": "1.1.0",
    "husky": "1.3.1",
    "jasmine-core": "3.4.0",
    "jasmine-expect": "4.0.1",
    "jasmine-spec-reporter": "4.2.1",
    "karma": "4.1.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage-istanbul-reporter": "2.0.5",
    "karma-edge-launcher": "0.4.2",
    "karma-firefox-launcher": "1.1.0",
    "karma-htmlfile-reporter": "0.3.8",
    "karma-ie-launcher": "1.0.0",
    "karma-jasmine": "2.0.1",
    "karma-jasmine-html-reporter": "1.4.2",
    "karma-jasmine-matchers": "4.0.1",
    "karma-mocha-reporter": "2.2.5",
    "karma-notify-reporter": "1.1.0",
    "karma-safari-launcher": "1.0.0",
    "karma-sauce-launcher": "2.0.2",
    "karma-scss-preprocessor": "4.0.0",
    "lite-server": "2.3.0",
    "ng-packagr": "5.2.0",
    "node-sass": "4.12.0",
    "sass": "1.20.1",
    "npm-run-all": "4.1.5",
    "postcss-cli": "6.1.2",
    "prettier": "1.17.0",
    "pretty-quick": "1.10.0",
    "replace": "1.0.0",
    "shx": "0.3.2",
    "stylelint": "10.0.1",
    "stylelint-config-recommended": "2.2.0",
    "tsickle": "0.35.0",
    "tslib": "1.10.0",
    "tslint": "5.16.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-defocus": "2.0.6",
    "typescript": "3.4.5"
  },
  "engines": {
    "node": ">=10.9.0 <11.0.0",
    "npm": ">=5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format:fix"
    }
  }
}
