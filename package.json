{
    "name": "clr-addons",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "build:ui:css": "node-sass  --include-path=node_modules --source-map=true --precision=6 --indentedSyntax=true ./src/mvap-theme.scss ./dist/clr-addons/clr-addons-mvap.css; node-sass --include-path=node_modules --source-map=true --precision=6 --indentedSyntax=true ./src/vu3-theme.scss ./dist/clr-addons/clr-addons-vu3.css",
        "build:ui:prefix": "postcss ./dist/clr-addons/clr-addons-mvap.css -o ./dist/clr-addons/clr-addons-mvap.css; postcss ./dist/clr-addons/clr-addons-vu3.css -o ./dist/clr-addons/clr-addons-vu3.css",
        "build:ui:src": "cpy --parents --cwd='src/' '**/*.scss' ../../dist/clr-addons/src/",
        "build:ui:optimize": "csso ./dist/clr-addons/clr-addons-mvap.css ./dist/clr-addons/clr-addons-mvap.min.css --map file; csso ./dist/clr-addons/clr-addons-vu3.css ./dist/clr-addons/clr-addons-vu3.min.css --map file;",
        "build:ui": "npm-run-all build:ui:css build:ui:prefix build:ui:src build:ui:optimize",
        "build:angular:package": "cpy ./npm/clr-addons/package.json ./npm/clr-addons/README.md ./src/; replace '@VERSION' $npm_package_version ./src/package.json",
        "build:angular:ngpackagr": "ng build clr-addons",
        "build:angular": "npm-run-all build:angular:package build:angular:ngpackagr",
        "build": "npm-run-all clean build:ui build:angular",
        "ng": "ng",
        "clean": "del ./dist",
        "test:format": "./scripts/clang-check.sh",
        "test:lint": "tslint -p . -c tslint.json \"src/**/*.ts\"",
        "test": "ng test clr-addons",
        "test:watch": "ng test clr-addons --watch",
        "test:travis": "npm-run-all build:ui test:format test:lint test",
        "format:fix": "node_modules/.bin/clang-format -style=file -i --glob=src/**/*.ts",
        "lint:fix": "tslint -p . -c tslint.json --fix \"src/**/*.ts\" -e \"**/node_modules/**\"",
        "publish:latest": "npm publish dist/clr-addons --access public"
    },
    "dependencies": {
        "@angular/common": "^6.0.0",
        "@angular/compiler": "^6.0.0",
        "@angular/core": "^6.0.0",
        "@angular/platform-browser": "^6.0.0",
        "@angular/platform-browser-dynamic": "^6.0.0",
        "@clr/ui": "^0.12.0-rc.2",
        "@webcomponents/custom-elements": "^1.0.0",
        "bootstrap": "4.0.0-alpha.5",
        "prismjs": "^1.6.0",
        "rxjs": "^6.1.0",
        "zone.js": "^0.8.26"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^0.6.0",
        "@angular-devkit/build-ng-packagr": "^0.6.0",
        "@angular-devkit/core": "^0.6.0",
        "@angular/cli": "^6.0.0",
        "@angular/compiler-cli": "^6.0.0",
        "@types/jasmine": "~2.8.6",
        "@types/jasmine-expect": "^3.8.1",
        "@types/jasmine-matchers": "^0.2.30",
        "@types/jasminewd2": "~2.0.3",
        "@types/node": "~8.9.4",
        "autoprefixer": "^6.7.7",
        "clang-format": "^1.2.3",
        "cpy-cli": "^1.0.1",
        "csso-cli": "^1.1.0",
        "del-cli": "^1.1.0",
        "jasmine-core": "~2.99.1",
        "jasmine-expect": "^3.8.3",
        "jasmine-spec-reporter": "~4.2.1",
        "karma": "~1.7.1",
        "karma-chrome-launcher": "~2.2.0",
        "karma-coverage-istanbul-reporter": "~1.4.2",
        "karma-edge-launcher": "^0.4.2",
        "karma-firefox-launcher": "^1.1.0",
        "karma-htmlfile-reporter": "^0.3.5",
        "karma-ie-launcher": "^1.0.0",
        "karma-jasmine": "~1.1.1",
        "karma-jasmine-html-reporter": "^0.2.2",
        "karma-jasmine-matchers": "^3.7.0",
        "karma-mocha-reporter": "^2.2.5",
        "karma-notify-reporter": "^1.0.1",
        "karma-safari-launcher": "^1.0.0",
        "karma-sauce-launcher": "^1.2.0",
        "karma-scss-preprocessor": "^3.0.0",
        "lite-server": "^2.3.0",
        "ng-packagr": "^2.4.2",
        "node-sass": "^4.8.3",
        "npm-run-all": "^4.1.2",
        "postcss-cli": "^5.0.0",
        "replace": "^0.3.0",
        "tslint": "~5.9.1",
        "tslint-defocus": "^2.0.3",
        "typescript": "~2.7.2"
    }
}
