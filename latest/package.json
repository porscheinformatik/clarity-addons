{
  "name": "clarity_addons_website",
  "version": "0.1.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/porscheinformatik/clarity-addons.git"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:dev": "ng serve --port 4300",
    "build": "ng build",
    "deploy:ci": "ng build --prod --outputPath=../deploy && npm run generate:404 && npm run update:versions",
    "generate:404": "cp-cli ../deploy/index.html ../deploy/404.html",
    "update:versions": "npm run update:addons_version && npm run update:clarity_version",
    "update:addons_version": "cross-var replace @ADDONS_VERSION $npm_package_dependencies__porscheinformatik_clr_addons ../deploy/ --recursive",
    "update:clarity_version": "cross-var replace @CLARITY_VERSION $npm_package_dependencies__clr_angular ../deploy/ --recursive",
    "postinstall": "ngcc --properties es2015 browser module main --first-only --create-ivy-entry-points"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "10.0.14",
    "@angular/common": "10.0.14",
    "@angular/compiler": "10.0.14",
    "@angular/core": "10.0.14",
    "@angular/forms": "10.0.14",
    "@angular/platform-browser": "10.0.14",
    "@angular/platform-browser-dynamic": "10.0.14",
    "@angular/platform-server": "10.0.14",
    "@angular/router": "10.0.14",
    "@clr/angular": "4.0.6",
    "@clr/core": "4.0.6",
    "@clr/icons": "4.0.6",
    "@clr/ui": "4.0.6",
    "@porscheinformatik/clr-addons": "9.2.1",
    "@webcomponents/webcomponentsjs": "^2.4.4",
    "classlist.js": "^1.1.20150312",
    "core-js": "^3.6.5",
    "intl": "^1.2.5",
    "jump.js": "^1.0.2",
    "prismjs": "^1.21.0",
    "rxjs": "^6.5.2",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.1000.8",
    "@angular/cli": "10.0.8",
    "@angular/compiler-cli": "10.0.14",
    "@angular/language-service": "10.0.14",
    "@types/node": "^13.13.19",
    "codelyzer": "^6.0.0",
    "cp-cli": "^2.0.0",
    "cross-var": "1.1.0",
    "gh-pages": "^2.2.0",
    "replace": "^1.1.1",
    "ts-loader": "^7.0.2",
    "tslint": "^6.1.3",
    "typescript": "3.9.7"
  }
}
