{
  "name": "clarity_addons_website",
  "version": "0.1.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/porscheinformatik/clarity-addons.git"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:dev": "ng serve --port 4300",
    "build": "ng build",
    "deploy:ci": "ng build --configuration production --outputPath=../deploy && npm run generate:404 && npm run update:versions",
    "generate:404": "cp-cli ../deploy/index.html ../deploy/404.html",
    "update:versions": "npm run update:addons_version && npm run update:clarity_version",
    "update:addons_version": "cross-var replace @ADDONS_VERSION $npm_package_dependencies__porscheinformatik_clr_addons ../deploy/ --recursive",
    "update:clarity_version": "cross-var replace @CLARITY_VERSION $npm_package_dependencies__clr_angular ../deploy/ --recursive",
    "postinstall": "ngcc --properties es2015 browser module main --first-only --create-ivy-entry-points"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "12.2.15",
    "@angular/common": "12.2.15",
    "@angular/compiler": "12.2.15",
    "@angular/core": "12.2.15",
    "@angular/forms": "12.2.15",
    "@angular/platform-browser": "12.2.15",
    "@angular/platform-browser-dynamic": "12.2.15",
    "@angular/platform-server": "12.2.15",
    "@angular/router": "12.2.15",
    "@cds/core": "5.6.2",
    "@clr/angular": "12.0.9",
    "@clr/icons": "12.0.9",
    "@clr/ui": "12.0.9",
    "@porscheinformatik/clr-addons": "11.0.0",
    "@webcomponents/custom-elements": "1.5.0",
    "@webcomponents/webcomponentsjs": "2.6.0",
    "classlist.js": "1.1.20150312",
    "core-js": "3.20.3",
    "intl": "1.2.5",
    "jump.js": "1.0.2",
    "prismjs": "1.26.0",
    "rxjs": "7.5.2",
    "tslib": "2.3.1",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "12.2.15",
    "@angular/cli": "12.2.15",
    "@angular/compiler-cli": "12.2.15",
    "@angular/language-service": "12.2.15",
    "@types/node": "16.11.19",
    "codelyzer": "6.0.2",
    "cp-cli": "2.0.0",
    "cross-var": "1.1.0",
    "gh-pages": "3.2.3",
    "replace": "1.2.1",
    "ts-loader": "9.2.6",
    "tslint": "6.1.3",
    "typescript": "4.3.5"
  }
}
